.order-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding-left: 30rpx;
  background: #fff;
  margin-top: 16rpx;
}
.order-item .i-top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 80rpx;
  padding-right: 30rpx;
  font-size: 24rpx;
  color: #303133;
  position: relative;
}
.order-item .i-top::after {
  position: absolute;
  z-index: 3;
  bottom: 0;
  left: 0;
  right: 0;
  height: 0;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  border-bottom: 1px solid #e4e7ed;
}
.order-item .goods-box-single {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx 0;
}
.order-item .goods-box-single .goods-img {
  display: block;
  width: 120rpx;
  height: 120rpx;
}
.order-item .goods-box-single .right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding: 0 30rpx 0 24rpx;
  overflow: hidden;
}
.order-item .goods-box-single .right .title {
  font-size: 25rpx;
  color: #303133;
  line-height: 1;
}
.order-item .goods-box-single .right .attr-box {
  font-size: 24rpx;
  color: #909399;
  padding: 10rpx 12rpx;
}
.order-item .goods-box-single .right .price {
  font-size: 24rpx;
  color: #303133;
}
.order-item .goods-box-single .right .price:before {
  content: '\FFE5';
  font-size: 20rpx;
  margin: 0 2rpx 0 8rpx;
}
.order-item .price-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  -webkit-box-align: baseline;
  -webkit-align-items: baseline;
          align-items: baseline;
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  color: #909399;
}
.order-item .price-box .num {
  margin: 0 8rpx;
  color: #303133;
}
.order-item .price-box .price {
  font-size: 26rpx;
  color: #303133;
}
.order-item .price-box .price:before {
  content: '\FFE5';
  font-size: 20rpx;
  margin: 0 2rpx 0 8rpx;
}
.order-item .action-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 100rpx;
  position: relative;
  padding-right: 30rpx;
}
.order-item .action-box::after {
  top: 0;
  position: absolute;
  z-index: 3;
  left: 0;
  right: 0;
  height: 0;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  border-bottom: 1px solid #e4e7ed;
}
.order-item .action-box .action-btn {
  width: 160rpx;
  height: 60rpx;
  margin: 0;
  margin-left: 24rpx;
  padding: 0;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #303133;
  background: #fff;
  border-radius: 100px;
}
.order-item .action-box .action-btn:after {
  border-radius: 100px;
}
.order-item .action-box .action-btn.recom {
  background: #fff9f9;
  color: #fa436a;
}
.order-item .action-box .action-btn.recom:after {
  border-color: #f7bcc8;
}

